<div class="startDiscussion">
    <% if(dtype === "resource"){%>
        <form action="/discussions/r/<%= r_id %>" method="POST">
    <% } else { %>
        <form action="/discussions/p/<%= r_id %>" method="POST">
    <% }%>
        <div class="form-group">
            <label for="title">Title <span class="require"> * </label>
            <input type="text" class="form-control" name="title" required>
        </div>
        <div class="form-group">
            <label for="question">Question</label>
            <textarea class="form-control" name="question" style='white-space:pre-wrap' required></textarea>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Ask Question</button>
            <% if(dtype === "resource"){%>
                <a class="btn btn-default" href="/discussions/r/<%= r_id %>">Cancel</a>
            <% } else { %>
                <a class="btn btn-default" href="/discussions/p/<%= r_id %>">Cancel</a>
            <% }%>
            
        </div>
    </form>
</div>
