        SetUpQuestion: function(collection_id) {
            game.GenerateQuestion(collection_id)
                .then((data) => {
                    Parsed_data = data['question']
                        // console.log(Parsed_data)
                    for (var i = 0; i < Parsed_data.n; i++) {
                        // console.log("New data \n", Parsed_data);
